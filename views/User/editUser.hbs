<ul class="breadcrumb">
  <li class="breadcrumb-item"><a href="/">Лист заявок</a></li>
  <li class="breadcrumb-item"><a href="/users/usersList">Users List</a></li>
  <li class="breadcrumb-item active">{{title}}</li>
</ul>
<ul class="nav nav-menu-custom">
    <li class="nav-item">
        <a class="nav-link" href="/users/update?id={{user._id}}">Update The User</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="" data-toggle="modal" data-target="#deleteModal">Delete The User</a>
    </li>
</ul>
<div class="d-flex">
    <div class="col-md-4">
        <form method='GET' action='' name='viewUser'>
            <div class="form-inline form-inline-custom">
                <label for="name">Name:</label>
                <input type="text" class="form-control" name="name" placeholder="Name" value="" disabled>
            </div>
            <div class="form-inline form-inline-custom">
                <label for="name">User Description:</label>
                <input type="text" class="form-control" name="userDesc" placeholder="User Description" value=""
                    disabled>
            </div>
            <div class="form-inline form-inline-custom">
                <label for="password">Password:</label>
                <input type="text" class="form-control" name="password" placeholder="Password" value="" disabled>
            </div>
            <div class="form-inline form-inline-custom">
                <label for="role">User Role:</label>
                <input type="text" class="form-control" name="role" placeholder="Role" value="" disabled>
            </div>
            <div class="form-inline form-inline-custom">
                <label for="orgUnity">Org Unity:</label>
                <input type="text" class="form-control" name="orgUnity" placeholder="Org Unity" value="" disabled>
            </div>
        </form>
    </div>
</div>
</div>
<!-- The Modal -->
<div class="modal fade" id="deleteModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Delete The User?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                Do you realy want to delete the user?
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <a class="btn btn-warning" href="/users/delete?id={{user._id}}">Delete</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<script>
    window.onload = function () {

        document.forms.viewUser.elements.name.value = '{{user.userName}}';
        document.forms.viewUser.elements.userDesc.value = '{{user.userDescription}}';
        document.forms.viewUser.elements.password.value = '{{user.userPassword}}';
        document.forms.viewUser.elements.role.value = '{{user.userRole}}';
        document.forms.viewUser.elements.orgUnity.value = '{{user.userOrgUnity}}';

    }
</script>